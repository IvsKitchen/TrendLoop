@model TrendLoop.Web.ViewModels.Product.BuyProductViewModel

@{
    ViewData["Title"] = "Buy Product";
}

<<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow-lg" style="width: 30rem;">
        <div class="card-header text-center bg-primary text-white">
            <h4 class="mb-0">Confirm Purchase</h4>
        </div>
        <div class="card-body">
            <div class="text-center mb-4">
                <!-- Product Image -->
                <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded shadow-sm" style="max-height: 150px; object-fit: cover;" />
            </div>

            <!-- Product Details -->
            <h5 class="text-center">@Model.Name</h5>
            <table class="table text-center">
                <thead></thead>
                    <tbody>
                        <tr>
                            <td><strong>Brand:</strong></td>
                            <td>@Model.BrandName</td>
                        </tr>
                        <tr>
                            <td><strong>Category:</strong></td>
                            <td>@Model.CategoryName</td>
                        </tr>
                        <tr>
                            <td><strong>Subcategory:</strong></td>
                            <td>@Model.SubcategoryName</td>
                        </tr>
                    </tbody>
            </table>

            <h6 class="mt-5">Product Details</h6>
            <ul class="list-group mb-3">
                @foreach (var attributeTypeWithValue in Model.AttributeTypesWithValues)
                {
                     <li class="list-group-item d-flex justify-content-between align-items-center">
                        <strong>@attributeTypeWithValue.AttributeTypeName:</strong> <span>@attributeTypeWithValue.Value</span></li>
                }
            </ul>
        </div>

        <!-- Footer Buttons -->
        <div class="card-footer text-center">
            <form asp-controller="Purchase" asp-action="Buy" method="post">
                <a class="btn btn-secondary" onclick="window.history.back()"><i class="fa-solid fa-times"></i> Cancel </a>
                <input type="hidden" name="ProductId" value="@Model.Id" />
                <button type="submit" class="btn btn-success me-2"><i class="fa-solid fa-check"></i> OK</button>
            </form>
        </div>
    </div>
</div>