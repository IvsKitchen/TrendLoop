@{
    ViewData["Title"] = "Home Page";
}

<title>TrendLoop - Fashion Loop</title>
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <div class="container">
        <!-- Hero Section -->
        <div class="hero-section row">
            <div class="hero-left col-md-6">
            <h1>Welcome to <strong>TrendLoop</strong></h1>
            <h3 class="mt-4 mb-4">Step Into the Loop of Affordable Luxury Fashion</h3>
                <p> Discover a seamless circle of style where high-end fashion meets incredible value. 
                    From pre-loved designer treasures to luxury finds at unbeatable prices, 
                    join a community that keeps fashion in motion—elevating your wardrobe while making a sustainable impact.
                </p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg">Enter The Loop</a>
            </div>
            <div class="hero-right col-md-6">
                <img src="~/images/landingPage/heroImage.jpg" alt="Hero Image">
            </div>
        </div>

        <!-- Categories Section -->
        <div class="categories-section text-center">
            <h2>Best For You</h2>
            <p>Explore items based on popular categories in luxury and sustainable fashion.</p>
            <div class="d-flex justify-content-center flex-wrap">
                <div class="category-item">
                <img src="~/images/landingPage/clothingImage.jpg" alt="Clothing">
                    <p>Clothing</p>
                </div>
                <div class="category-item">
                <img src="~/images/landingPage/shoesImage.jpg" alt="Shoes">
                    <p>Shoes</p>
                </div>
                <div class="category-item">
                <img src="~/images/landingPage/bagsImage.jpg" alt="Bags">
                    <p>Bags</p>
                </div>
                <div class="category-item">
                <img src="~/images/landingPage/accessoriesImage.jpg" alt="Accessories">
                <p>Accessories</p>
                </div>
            </div>
        </div>
    </div>
