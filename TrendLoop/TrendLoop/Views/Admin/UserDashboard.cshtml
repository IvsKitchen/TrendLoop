@using TrendLoop.Web.ViewModels.Admin

@model AdminAddUserDashboardViewModel

@{
    ViewData["Title"] = "User Dashboard";
}

<div class="container mt-4">
    <h2>Admin Dashboard</h2>

    <!-- User Management Section -->
    <div class="card mb-4">
        <div class="card-header">User Management</div>
        <div class="card-body">
            <div class="col">
                <!-- Add User Section -->
                <div class="col-md-6 mb-5">
                    <h5>Add User</h5>
                    <form asp-action="AddUser" method="post">
                        <div class="mb-2">
                            <label asp-for="@Model.Email" class="form-label" >User Email</label>
                            <input asp-for="@Model.Email" type="email" class="form-control" id="email" required>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label asp-for="@Model.Password" class="form-label">Password</label>
                            <input asp-for="@Model.Password" type="password" name="Password" id="password" class="form-control" required>
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary" id="addUserBtn">Add User</button>
                    </form>
                </div>

                <!-- Delete User Section -->
                <div class="col-md-6 mb-5">
                    <h5>Delete Users</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">User Email</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>@user.Username</td>
                                        <td>
                                            <div class="d-flex justify-content-around">
                                                <!-- Delete Button -->
                                                <form asp-action="DeleteUser" method="post" style="display:inline;">
                                                    <input asp-for="@Model.Email" type="hidden" value="@user.Username" />
                                                    <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</button>
                                                </form>
                                                <!-- Second Button -->
                                                <button type="button" class="btn btn-warning btn-sm" disabled>
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>