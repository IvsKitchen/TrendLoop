@using TrendLoop.Web.ViewModels.Areas.Admin.User

@model ResultMessageViewModel

@{
    ViewData["Title"] = "Result Message";


    <div class="card shadow-lg p-4 text-center" style="width: 30rem;">
        <div class="card-body">
        <div class="mb-3">
            @if (!Model.Messages.Any(msg => msg.Contains("Error")))
            {
                <i class="fa-solid fa-circle-check fa-xl" style="color: #11b823;"></i>
            }
            else
            {
                <i class="fa-solid fa-xmark fa-xl" style="color: #db3939;"></i>
            }
            </div>
            <!-- Title -->
            <h4 class="card-title mb-3 text-center">@Model.Title</h4>
            <!-- Message -->
            <ul class="list-unstyled">
                @foreach (var message in Model.Messages)
                {
                    <li>@message</li>
                }
            </ul>
            <!-- Button -->
            <div class="mt-4">
                <a href="@Url.Action("UserDashboard", "Admin")" class="btn btn-primary w-100">
                    Back to Dashboard
                </a>
            </div>
        </div>
</div>
}